useDynLib(rrcov)
importFrom(stats4, plot, summary)

export(Cov,
       CovMcd,
       CovMest,
       CovOgk,
       CovControlMcd,
       CovControlMest,
       CovControlOgk,
       covMest,
       T2.test,
       Wilks.test,
       PcaClassic,
       Robpca
)

##S3 generics
S3method(T2.test, default)
S3method(T2.test, formula)

S3method(Wilks.test, default)
S3method(Wilks.test, formula)
S3method(Wilks.test, data.frame)
S3method(Wilks.test, matrix)

S3method(PcaClassic, default)
S3method(PcaClassic, formula)
S3method(Robpca, default)
S3method(Robpca, formula)

## S4 generics
export(isClassic,
       getCenter,
       getCov,
       getCorr,
       getData,
       getDistance,
       getEvals,
       estimate,
       getQuan,
       getLoadings,
       getEigenvalues,
       getSdev,
       getScores,
       getPrcomp
       
)

exportClasses(Cov,
              CovRobust,
              CovMcd,
              CovMest,
              CovOgk,
              CovControl,
              CovControlMcd,
              CovControlMest,
              CovControlOgk,
              SummaryCov,
              SummaryCovRobust,
              Pca,
              PcaClassic,
              PcaRobust,
              Robpca
              
)

exportMethods(isClassic,
              getCenter,
              getCov,
              getCorr,
              getData,
              getDistance,
              getEvals,
              plot,
              show,
              summary,
              estimate,
              getQuan,
              getLoadings,
              getEigenvalues,
              getSdev,
              getScores,
              getPrcomp,
